<html lang="es">

  <head>
    <title>CRUD</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!--CSS de bootstrap-->
    <link rel="stylesheet" href="/bootstrap/bootstrap.css" />

    <link rel="stylesheet" type="text/css" href="/css/mainLogin.css" />
    <link rel="stylesheet" type="text/css" href="/css/utilLogin.css" />
    <link rel="icon" type="image/png" href="/assets/favicon-32x32.png" />
    <script src="/js/errormsglogin.js"></script>
  </head>

  <body>
    <div class="limiter">
      <div
        class="container-login100"
        style="background-image: url('/assets/bg-01.jpg');"
      >
        <div class="wrap-login100 p-t-30 p-b-50">
          <span class="login100-form-title p-b-41">
            <img
              src="/assets/android-chrome-192x192.png"
              style="width: 250px; text-align: center; "
            />
          </span>
          <form
            class="login100-form validate-form p-b-33 p-t-5"
            method="POST"
            action="/auth"
          >
            <div
              class="input-group wrap-input100 validate-input"
              data-validate="Escribe correo"
            >
              <input
                autocomplete="off"
                class="input100"
                type="text"
                name="username"
                id="username"
                placeholder="Correo"
                required
              />
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Escribe contraseña"
            >
              <input
                class="input100"
                type="password"
                name="password"
                id="password"
                placeholder="Contraseña"
                required
              />
            </div>

            <div class="container-login100-form-btn m-t-32">
              <button class="login100-form-btn" type="submit" name="entrar">
                Entrar
              </button>
            </div>

            <div class="d-flex justify-content-center mt-4">
              {{#if error}}
                <h
                  id="errormsg"
                  style="color: red; font-size:13px"
                >{{error}}</h>
              {{/if}}
            </div>

          </form>
        </div>
      </div>
    </div>

    <!--JS de bootstrap-->
    <script src="/bootstrap/bootstrap.js"></script>

  </body>

</html>