    <form
      action="/especialGrasasPost"
      method="POST"
      class=""
      enctype="multipart/form-data"
    >
      <!-- Card -->
      <div class="card">

        <div class="row">

          <div class="col-1 mt-2 ms-3">
            <input
              type="button"
              value="Regresar"
              onclick="location.href='/especialGrasas'"
              class="btn btn-primary d-flex justify-content-start"
            />
          </div>

          <div class="col-10">
            <h1
              class="d-flex justify-content-center mt-2"
              style="font-size: 30px; font-family: 'Pier_Sans_Bold'; color:white; text-shadow: 0 0 4px black"
            >
              ESPECIAL GRASAS</h1>
          </div>
          <div class="col-1"></div>

        </div>

        <br />

        {{! Card Body }}
        <div class="card-body" style="padding-bottom: 0px; padding-top: 0px;">
          <div class="container-fluid">
            <div class="row">

              <div class="col-1"></div>
              <div class="col-3">
                <h5 class="h5modal">Hoja Técnica</h5>
                <select
                  id="agregarPK"
                  name="agregarPK"
                  class="form-select"
                  required
                >
                  {{#each data}}
                    <option
                      value="{{this.PK_HojaTecnica}}"
                    >{{this.PK_HojaTecnica}}</option>
                  {{/each}}
                </select>
                <br />
              </div>

              <div
                id="panelEspecialGrasas"
                class="col-8 d-flex justify-content-center align-items-center"
              >
                <div class="">
                  <!-- Otros campos del formulario -->
                  <label for="fileInput">Seleccionar Archivo:</label>
                  <input
                    style="
                  display: inline-block;
                  padding: 6px 12px;
                  cursor: pointer;"
                    type="file"
                    name="fileInput"
                    id="fileInput"
                    multiple
                  />
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="d-flex justify-content-end">
          <button
            type="submit"
            id="btnAgregar"
            class="btn btn-success me-3 mb-2"
          >Agregar</button>
        </div>

      </div>
      {{! Fin card  }}

    </form>
    <!--JS de bootstrap-->
    <script src="/bootstrap/bootstrap.js"></script>
      

